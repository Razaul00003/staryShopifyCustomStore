<script>
  const imageUrls = [
    "https://starify.me/wp-content/uploads/2023/08/screen-min.jpeg",
    "https://starify.me/wp-content/uploads/2023/08/screen3.jpg",
    "https://starify.me/wp-content/uploads/2023/08/screen4.jpg",
  ];

  const defaultScreen = document.querySelector(".default-screen");
  let currentIndex = 0;

  function changeImage() {
    defaultScreen.style.opacity = 0; // Start by fading out the current image
    setTimeout(() => {
      defaultScreen.src = imageUrls[currentIndex];
      defaultScreen.style.opacity = 1; // Fade in the new image
      currentIndex = (currentIndex + 1) % imageUrls.length;
    }, 500); // Adjust the delay to match the transition duration
  }

  changeImage(); // Start with the first image
  setInterval(changeImage, 3000);
</script>
